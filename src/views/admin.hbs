<div class="row">
  <div class="cold-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1>Ingresar como Administrador</h1>
      </div>
      <img src="/img/logo.png" class="logo rounded-circle mx-auto d-block m-4" alt="logo">
      <div class="card-body">
        <form class="" action="/admin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Usuario" autofocus>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-block btn-primary">
              Ingresar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
